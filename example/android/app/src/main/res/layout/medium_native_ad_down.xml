<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:minHeight="50dp"
        android:orientation="vertical">

        <!-- Badge Ad -->
        <TextView
            android:layout_width="19dp"
            android:layout_height="15dp"
            android:background="@layout/large_native_ad_text"
            android:gravity="center"
            android:text="Ad"
            android:textColor="#FFFFFF"
            android:textSize="9sp" />

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <!-- App Icon -->
            <ImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <!-- text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">
                <!-- headline -->
                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Headline here"
                    android:textColor="#FF4B8CE6"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <!-- ad_advertise -->
                <TextView
                    android:id="@+id/ad_advertise"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Ad advertise here"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="8dp" />

        <!-- ad_advertise -->
        <TextView
            android:id="@+id/ad_body"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginHorizontal="20dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="Body"
            android:textColor="#000000"
            android:textSize="12sp" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="8dp" />

        <!-- button -->
        <Button
            android:id="@+id/ad_call_to_action"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:background="@layout/large_native_ad_button"
            android:gravity="center"
            android:text="INSTALL"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="15dp" />
    </LinearLayout>
</com.google.android.gms.ads.nativead.NativeAdView>